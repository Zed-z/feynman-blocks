{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",

                "-g",
                "${workspaceFolder}\\**.c",
                "${workspaceFolder}\\source\\**.c",

                "-o",
                "${workspaceFolder}\\main.exe",

                "-IC:/msys64/mingw64/bin/../include",
                "-LC:/msys64/mingw64/bin/../lib",
                "-ljansson",

                "-DDEBUG"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${env:PATH};C:\\msys64\\usr\\bin"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}